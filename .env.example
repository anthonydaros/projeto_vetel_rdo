# Example environment configuration file
# Copy this file to .env and update with your values

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=formulario_bd
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# ========================================
# TIMEZONE
# ========================================
TIMEZONE=America/Sao_Paulo

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_LIFETIME=3600
SESSION_SECURE_COOKIE=false
SESSION_DOMAIN=
SESSION_PATH=/

# ========================================
# ADMIN CREDENTIALS
# ========================================
# Change these immediately after first login!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================

# Photo Path Configuration (New - Recommended)
# Separate filesystem paths from web URL paths for better Docker compatibility
PHOTO_STORAGE_DIR=/var/www/html/img/album  # Absolute filesystem path for file operations
PHOTO_WEB_PATH=img/album                   # Relative web path for URLs and HTML

# Legacy Photo Path (Maintained for backward compatibility)
# NOTE: This serves dual purpose and can cause issues in Docker environments
PHOTO_STORAGE_PATH=/var/www/html/img/album

# Upload Limits
MAX_UPLOAD_SIZE=10M
MAX_FILE_UPLOADS=20
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=100M

# ========================================
# SECURITY SETTINGS
# ========================================
# These will be auto-generated in production
JWT_SECRET=your-secret-key-here
APP_KEY=your-app-key-here
ENCRYPTION_KEY=your-encryption-key-here

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Projeto Vetel"

# ========================================
# PHP CONFIGURATION
# ========================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_MAX_INPUT_TIME=300
PHP_ERROR_REPORTING=E_ALL & ~E_DEPRECATED & ~E_STRICT

# ========================================
# APACHE CONFIGURATION
# ========================================
APACHE_RUN_USER=www-data
APACHE_RUN_GROUP=www-data
APACHE_LOG_LEVEL=warn

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DAYS=14

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_DRIVER=file
CACHE_PREFIX=vetel_

# ========================================
# BACKUP CONFIGURATION (Optional)
# ========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# ========================================
# MONITORING (Optional)
# ========================================
MONITORING_ENABLED=false
SENTRY_DSN=
NEW_RELIC_KEY=

# ========================================
# FEATURE FLAGS (Optional)
# ========================================
FEATURE_REGISTRATION=false
FEATURE_API=false
FEATURE_MULTI_TENANT=false

# ========================================
# RATE LIMITING (Optional)
# ========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1